{
  "name": "shoppinglist-shared",
  "version": "1.0.0",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "license": "MIT",
  "scripts": {
    "build": "yarn run build:clean && yarn run build:tsc",
    "build:clean": "rm -rf ./build",
    "build:tsc": "tsc",
    "watch": "yarn run build:clean && yarn run watch:tsc",
    "watch:tsc": "yarn run build:tsc --watch",
    "test": "jest src",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "typecheck": "tsc --noEmit",
    "format": "yarn run format:imports; yarn run format:prettier",
    "format:imports": "organize-imports-cli tsconfig.json",
    "format:prettier": "yarn run -T prettier src --write"
  },
  "dependencies": {
    "color-string": "^1.5.2",
    "date-fns": "^2.12.0",
    "deep-freeze": "^0.0.1",
    "escape-string-regexp": "^4.0.0",
    "is-uuid": "^1.0.2",
    "lodash": "^4.17.14",
    "mathjs": "^12.4.1",
    "nodemon": "^2.0.3",
    "uuid": "^7.0.3"
  },
  "devDependencies": {
    "@types/color-string": "^1.5.0",
    "@types/deep-freeze": "^0.1.2",
    "@types/is-uuid": "^1.0.0",
    "@types/jest": "^24.9.0",
    "@types/lodash": "^4.14.149",
    "@types/mockdate": "^2.0.0",
    "@types/node": "^13.11.1",
    "@types/nodemon": "^1.19.0",
    "@types/uuid": "^7.0.2",
    "mockdate": "^2.0.3"
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "testPathIgnorePatterns": [
      "/build/",
      "/node_modules/"
    ],
    "moduleFileExtensions": [
      "js",
      "ts"
    ]
  }
}
